# Supabase Configuration
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Session Secret (change this to a random string in production)
SESSION_SECRET=your_secret_key_change_in_production

# Encryption Secret for per-user key derivation (change this in production)
EXPO_PUBLIC_ENCRYPTION_SECRET=your_encryption_secret_change_in_production

# Server Port
PORT=3000

# Expo Configuration (automatically set by Replit)
EXPO_PACKAGER_PROXY_URL=https://$REPLIT_DEV_DOMAIN
REACT_NATIVE_PACKAGER_HOSTNAME=$REPLIT_DEV_DOMAIN

# Mobile App API URL (update with your Replit URL)
EXPO_PUBLIC_API_URL=https://your-replit-url.repl.co
